{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "declaration": true,
    "stripInternal": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main"]
}
